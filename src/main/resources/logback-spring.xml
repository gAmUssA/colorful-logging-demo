<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define custom conversion rules for colorful logging -->
    <conversionRule conversionWord="customHighlightingLogLevel" 
                   converterClass="com.example.colorfullogging.config.CustomHighlightingLogLevel" />
    <conversionRule conversionWord="customHighlightingPackageName" 
                   converterClass="com.example.colorfullogging.config.CustomHighlightingPackageName" />
    <conversionRule conversionWord="customHighlightingMessage" 
                   converterClass="com.example.colorfullogging.config.CustomHighlightingMessage" />

    <!-- Console appender with colorful output -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%customHighlightingLogLevel(%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level) %customHighlightingPackageName([%thread] %logger{36}.%M\(%line\)): %customHighlightingMessage(%msg%n)</pattern>
        </encoder>
    </appender>

    <!-- File appender without colors -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/colorful-logging-demo.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/colorful-logging-demo.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36}.%M\(%line\): %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Application logger -->
    <logger name="com.example.colorfullogging" level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Spring framework logger -->
    <logger name="org.springframework" level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
